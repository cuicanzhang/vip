<Window x:Class="vip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vip"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <RichTextBox Name="debugRTB" HorizontalAlignment="Left" Height="85" Margin="45,380,0,0" VerticalAlignment="Top" Width="635">
            <FlowDocument/>
        </RichTextBox>
        <DataGrid x:Name="vipInfoDG"
                  Grid.Row="1"
                  Grid.Column="0"
                  Margin="20,0,20,0"
                  AutoGenerateColumns="False"
                  SelectionUnit="FullRow"
                  Height="500"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="序号" Width="50" />
                <DataGridTextColumn Binding="{Binding Name}"   Header="姓名" Width="100" />
                <DataGridTextColumn Binding="{Binding Age}"    Header="积分"  Width="80"  />
                <DataGridTextColumn Binding="{Binding Sex}"     Header="联系方式" Width="200"  />
                <DataGridTextColumn Binding="{Binding Wage}"    Header="备注" Width="200"  />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
