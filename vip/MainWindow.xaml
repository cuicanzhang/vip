<Window x:Class="vip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vip"
        mc:Ignorable="d"
        Title="会员管理" Height="600" Width="800">
    <Grid>
        <DataGrid Name="dispDataGrid" AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Left" Height="390" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" ItemsSource="{Binding}" MouseDoubleClick="dispDataGrid_MouseDoubleClick" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="序号" Binding="{Binding ID}" Width="60" ></DataGridTextColumn>
                <DataGridTextColumn Header="姓名" Binding="{Binding Name}" Width="100" ></DataGridTextColumn>
                <DataGridTextColumn Header="积分" Binding="{Binding Scores}" Width="80" ></DataGridTextColumn>
                <DataGridTextColumn Header="联系方式" Binding="{Binding Phone}" Width="110" ></DataGridTextColumn>
                <DataGridTextColumn Header="备注" Binding="{Binding Remarks}" Width="*" ></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="findAllBtn" Content="查找" HorizontalAlignment="Left" Margin="25,438,0,0" VerticalAlignment="Top" Width="75" Click="findAllBtn_Click"/>
        <Button Name="addBtn" Content="添加" HorizontalAlignment="Left" Margin="155,438,0,0" VerticalAlignment="Top" Width="75" Click="addBtn_Click"/>
    </Grid>
</Window>
